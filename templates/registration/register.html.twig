{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}


	<div class="text-danger">
		{{ form_errors(registrationForm) }}
	</div>

	<div class="container d-flex justify-content-center mt-5">

		<div class="col-12 col-sm-8 col-md-6 col-lg-4 p-4 bg-secondary rounded text-white">

			<div class="card-body bg-secondary">
				<a href="{{ path('app_home') }}" class="nav-link" style="font-size: large;"><img class="img-fluid rounded-3" style="width: 50px; height: 50px" src="{{ asset('images/blog_post.jpg') }}" alt="Logo de l'application">
					Blog</a>
			</div>

			<h1>Inscription</h1>

			{{ form_start(registrationForm) }}


			{{ form_row(registrationForm.email) }}

			{{ form_row(registrationForm.plainPassword, {
				label: 'Mot de passe',
			}) }}

			{{ form_row(registrationForm.agreeTerms) }}


			<div class="text-end mt-3">
				<button type="submit" class="btn btn-primary">S'inscrire</button>
			</div>

			{{ form_end(registrationForm) }}
			<a href="{{path('app_login')}}" class="text-white">Vous avez déjà un compte ?</a>
		</div>
	</div>

{% endblock %}
