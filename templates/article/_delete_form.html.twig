<form method="post" action="{{ path('app_article_delete', {'slug': article.slug}) }}" onsubmit="return confirm('{{ confirm_message|default('Confirmer la suppression de cet article ?') }}');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
	<button class="{{ button_class|default('btn btn-outline-danger') }}" type="submit">{{ button_label|default('Supprimer') }}</button>
</form>
